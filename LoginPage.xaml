<Page x:Class="WpfApp_TAKE_1.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_TAKE_1" 
      
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="1020" d:DesignWidth="1080"
      Title="MainPage" >


    <Grid>

        
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="txtUsername" Foreground="Black" Width="200" />
        <PasswordBox x:Name="txtPassword" Foreground="Black" Margin="0,10, 0, 0" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="200" Height="20" />
        <Button x:Name="LogInButton"  Content="Log In" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Click="LogInButton_Click" />

    </Grid>


</Page>
